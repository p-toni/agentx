    },
    "requireApprovalLabels": [
      "external_email",
      "calendar",
      "payments"
    ],
    "timeWindow": {
      "end": "18:00",
      "start": "08:00",
      "timezone": "UTC"
    },
    "version": "policy-v1"
  }
}
