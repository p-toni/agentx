{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "typeRoots": ["./types", "../../node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "http-mitm-proxy": ["./types/http-mitm-proxy/index"],
      "http-mitm-proxy/*": ["./types/http-mitm-proxy/index"]
    }
  },
  "include": ["src/**/*.ts", "types/**/*.d.ts"],
  "exclude": ["dist", "tests"]
}
